<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="posts.AddPostLayoutController">
   <children>
      <TextArea fx:id="postContent" layoutX="25.0" layoutY="30.0" prefHeight="250.0" prefWidth="450.0" promptText="Enter your post here.">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button layoutX="354.0" layoutY="299.0" mnemonicParsing="false" onMouseClicked="#post" text="Post">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="414.0" layoutY="299.0" mnemonicParsing="false" onMouseClicked="#cancel" text="Cancel">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="290.0" layoutY="299.0" mnemonicParsing="false" onMouseClicked="#clear" text="Clear">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
